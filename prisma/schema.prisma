// prisma/schema.prisma - VERSIÓN CORREGIDA

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_LOCAL")
}

enum Tier {
  S
  A
  B
  C
  D
  E
}

model TierList {
  id Int @id @default(autoincrement())
  name Tier @unique
  duration Float @map("duration")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  categories TaskCategory[]
  @@map("tier_list")
}

enum Priority {
  LOW
  NORMAL
  HIGH
  URGENT
}

enum Status {
  TO_DO
  IN_PROGRESS
  ON_APPROVAL
  COMPLETE
}

model User {
  id String @id @unique
  name String
  email String @unique
  active Boolean @default(false)  
  roles UserRole[]
  tasks TaskAssignment[]
  vacations UserVacation[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserVacation {
  id Int @id @default(autoincrement())
  userId String
  user User @relation(fields: [userId], references: [id])
  startDate DateTime
  endDate DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@unique([userId, startDate, endDate])
}

model Brand {
  id String @id @unique
  name String @unique
  spaceId String?
  folderId String?
  teamId String?
  isActive Boolean @default(true)
  description String?  
  defaultStatus Status @default(TO_DO)
  tasks Task[]
  userRoles UserRole[]  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id String @id @unique
  name String
  description String?
  status Status @default(TO_DO)
  priority Priority
  startDate DateTime
  deadline DateTime
  timeEstimate Int?
  customDuration Float?
  points Int?
  tags String?
  url String?
  lastSyncAt DateTime?
  syncStatus String @default("PENDING")
  syncError String?
  typeId Int
  categoryId Int
  brandId String
  type TaskType @relation(fields: [typeId], references: [id], onDelete: Cascade)
  category TaskCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  brand Brand @relation(fields: [brandId], references: [id], onDelete: Cascade)
  assignees TaskAssignment[]  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TaskAssignment {
  id Int @id @default(autoincrement())
  userId String
  taskId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  @@unique([userId, taskId])
}

model TaskType {
  id Int @id @default(autoincrement())
  name String @unique
  categories TaskCategory[]
  roles UserRole[]
  tasks Task[]
}

model TaskCategory {
  id Int @id @default(autoincrement())
  name String
  typeId Int
  tierId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  type TaskType @relation(fields: [typeId], references: [id])
  tierList TierList @relation(fields: [tierId], references: [id])
  tasks Task[]
  @@unique([name, typeId])
  @@map("task_category")
}

model UserRole {
  id Int @id @default(autoincrement())
  userId String
  typeId Int
  brandId String?
  user User @relation(fields: [userId], references: [id])
  type TaskType @relation(fields: [typeId], references: [id])
  brand Brand? @relation(fields: [brandId], references: [id])
  @@unique([userId, typeId, brandId])
}

model SyncLog {
  id Int @id @default(autoincrement())
  entityType String
  entityIntId Int?
  entityStringId String?
  action String
  status String
  errorMessage String?
  clickupResponse Json?  
  createdAt DateTime @default(now())
}

model SystemSettings {
  id String   @id @default(cuid())
  category String
  key String
  value Json
  dataType String
  
  // Metadatos para la UI
  label String 
  description String?
  group String
  order Int @default(0)
  
  // Validación
  minValue Float?
  maxValue Float?
  options Json?
  required Boolean  @default(true)
  
  // Control de cambios
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([category, key])
  @@index([group, order])
}